{
  "compilerOptions": {
    "alwaysStrict": true,
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "downlevelIteration": true,
    "module": "esnext",
    "moduleResolution": "node",
    "lib": ["dom", "es2016"],
    "outDir": "./out/esm",
    "sourceMap": true,
    "target": "es6"
  },
  "exclude": ["node_modules", "out", "lib", "test"]
}
